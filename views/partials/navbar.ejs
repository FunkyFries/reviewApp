<nav>
    <ul class="navbar">
        <li><a href="/campgrounds" id="homeLink">YelpCamp</a><i id="navIcon" class="fas fa-bars"></i></li>
        <div class="navLinks visibility">
            <% if(!currentUser){ %>
                <li><a href="/login">Login</a></li>
                <li><a href="/register">Sign Up</a></li>
            <% } else { %>
                <li><a href="#">Signed In As <%= currentUser.username %></a></li>
                <li><a href="/logout">Logout</a></li>
            <% } %>
        </div>
    </ul>
</nav>

<script>
    function toggleNavbar(e) {
        const navLinks = document.querySelector(".navLinks"); 
        navLinks.classList.toggle("visibility");
    }
    document.querySelector("#navIcon").addEventListener("click", toggleNavbar);
</script>

<% if(error && error.length > 0) { %>
    <div class="flash-error" role="alert">
        <%= error %>
    </div>
<% } %>
<% if(success && success.length > 0) { %>
    <div class="flash-success" role="alert">
        <%= success %>
    </div>
<% } %>